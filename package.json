{
  "name": "xiot.github.io",
  "version": "1.0.0",
  "description": "Advent of Code site",
  "main": "index.js",
  "repository": "https://github.com/Xiot/xiot.github.io.git",
  "author": "Chris Thomas <tchrs@uber.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf ./dist/*",
    "build": "snowpack build",
    "build:server": "esbuild src/server/index.ts --platform=node --sourcemap --format=esm --outdir=dist/server --charset=utf8 && cp ./src/server/package.json ./dist/server/package.json && cp -r ./src/server/data/ ./dist/server/data/",
    "dev:server": "HTTP=1 nodemon",
    "dev:server:run": "yarn build:server && node ./dist/server/index.js",
    "dev": "snowpack dev",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "yarn lint --fix",
    "local-certs": "npx devcert-cli generate localhost && mv localhost.key snowpack.key && mv localhost.cert snowpack.crt",
    "build:run": "yarn build:server && yarn build && node ./dist/server/index.js"
  },
  "dependencies": {
    "chart.js": "^3.6.0",
    "fastify": "^3.9.2",
    "fastify-static": "^4.5.0",
    "http2-proxy": "^5.0.53",
    "luxon": "^2.1.1",
    "morgan": "^1.10.0",
    "node-fetch": "^3.1.0"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.29",
    "@types/luxon": "^2.0.7",
    "@types/morgan": "^1.9.2",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "nodemon": "^2.0.6",
    "pino-pretty": "^7.2.0",
    "prettier": "^2.2.1",
    "snowpack": "^3.8.8",
    "typescript": "^4.1.3"
  }
}